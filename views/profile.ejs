<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profiles Catalog</title>
    <link rel="stylesheet" href="./style.css">
    <style>
        #overlay.show {
            display: block;
        }

        #add-profile-page.show,
        #update-profile-page.show {
            display: block;
            animation: dialog 250ms linear 1;
            z-index: 1
        }

        @keyframes dialog {
            from {
                opacity: 0;
                /* transform: scale(0.55); */
            }

            to {
                opacity: 1;
                /* transform: scale(0.70); */
            }

        }
    </style>
</head>

<body class="flex items-center justify-center bg-gray-100 relative">
    <main id="container" class="w-[90vw] flex flex-col place-content-center">
        <%-include('header', {activeOption: 'clients' })%>
            <div class="flex flex-row items-center justify-between">
                <h1 class=" text-black text-base md:text-2xl font-bold mx-4 md:mx-12 mt-6 md:mt-12 mb-2 md:mb-4">Clients'
                    Profiles

                </h1>
            </div>
            <hr class="my-3 mr-8">
            <div id="profile-container"
                class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 items-center justify-center gap-x-8 w-[90%] p-8">


                <div onclick="return addProfile()"
                    class=" h-[22em] scale-95 flex flex-col justify-center items-center gap-y-4 border-[3px] border-dashed border-purple-400 bg-white  rounded-lg py-4 px-5 cursor-pointer">
                    <svg class="size-12 text-purple-600" xmlns="http://www.w3.org/2000/svg" fill="none"
                        viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                        <path stroke-linecap="round" stroke-linejoin="round"
                            d="M13.5 16.875h3.375m0 0h3.375m-3.375 0V13.5m0 3.375v3.375M6 10.5h2.25a2.25 2.25 0 0 0 2.25-2.25V6a2.25 2.25 0 0 0-2.25-2.25H6A2.25 2.25 0 0 0 3.75 6v2.25A2.25 2.25 0 0 0 6 10.5Zm0 9.75h2.25A2.25 2.25 0 0 0 10.5 18v-2.25a2.25 2.25 0 0 0-2.25-2.25H6a2.25 2.25 0 0 0-2.25 2.25V18A2.25 2.25 0 0 0 6 20.25Zm9.75-9.75H18a2.25 2.25 0 0 0 2.25-2.25V6A2.25 2.25 0 0 0 18 3.75h-2.25A2.25 2.25 0 0 0 13.5 6v2.25a2.25 2.25 0 0 0 2.25 2.25Z" />
                    </svg>



                    <h1 class="text-gray-500 text-2xl font-semibold">Add new Client</h1>

                </div>
            </div>


            <!--! ADD PROfile FORM-->

            <div id="add-profile-page"
                class="w-[85 md:w-[70vw] hidden bg-white scale-[0.70] p-12 fixed top-[50%] left-[-25%] translate-y-[-50%] translate-x-[50%] rounded-lg">
                <div class="flex flex-row items-center justify-between mb-4">
                    <h1 class="text-black text-base md:text-2xl font-bold mx-4 md:mx-12">Add Client
                    </h1>
                    <button onclick="hideAddProfile()"
                        class=" text-gray-500 hover:text-gray-400 text-sm md:text-xl p-sm mx-4 md:mx-12 flex flex-row items-center justify-center gap-2">
                        Go back <svg width="7" height="10" xmlns="http://www.w3.org/2000/svg">
                            <path d="M1 1l4 4-4 4" stroke="#7C5DFA" stroke-width="2" fill="none" fill-rule="evenodd" />
                        </svg> </button>
                </div>
                <hr class="my-3 mr-8 h-[.2px]">

                <form method="POST" action="/api/profiles" name="addProfileForm"
                    class=" gap-4 flex flex-col pt-4 md:px-12 h-[50%]">


                    <div class="flex flex-col my-2">
                        <!-- Name -->
                        <div class="flex flex-col col-span-1 mr-8" id="name">
                            <label class=" label-red my-1 text-gray-500 font-semibold required" for="name">Name</label>
                            <input
                                class="border-[.2px] border-gray-300 py-1 md:py-2 px-4 rounded focus:outline-purple-400"
                                type="text" name="name" required>
                            <span class="error text-red-500 text-[12px] ml-2 mt-1"></span>
                        </div>
                        <!-- Father Name -->
                        <div class="flex flex-col col-span-1 mr-8" id="father_name">
                            <label class=" label-red my-1 text-gray-500 font-semibold required" for="fatherName">Father
                                name</label>
                            <input
                                class="border-[.2px] border-gray-300 py-1 md:py-2 px-4 rounded focus:outline-purple-400"
                                type="text" name="fatherName" required>
                            <span class="error text-red-500 text-[12px] ml-2 mt-1"></span>
                        </div>

                        <!-- Contact -->
                        <div class="flex flex-col col-span-1 mr-8" id="contact">
                            <label class="label-red my-1 text-gray-500 font-semibold required"
                                for="contact">Contact</label>
                            <input
                                class="border-[.2px] border-gray-300 py-1 md:py-2 px-4 rounded focus:outline-purple-400"
                                type="number" name="contact" required>
                            <span class="error text-red-500 text-[12px] ml-2 mt-1"></span>
                        </div>

                        <!-- CNIC -->
                        <div class="flex flex-col col-span-1 mr-8" id="cnic">
                            <label class=" label-red my-1 text-gray-500 font-semibold required" for="cnic">CNIC</label>
                            <input
                                class="border-[.2px] border-gray-300 py-1 md:py-2 px-4 rounded focus:outline-purple-400"
                                type="number" name="cnic" required>
                            <span class="error text-red-500 text-[12px] ml-2 mt-1"></span>
                        </div>
                    </div>

                    <!-- BUTTON -->
                    <input onclick="hideAddProfile()"
                        class="rounded-lg cursor-pointer bg-purple-700 hover:opacity-[0.8] text-white text-xl px-20 py-2 md:py-3"
                        type="submit" value="+ Add new Profile">
                </form>
            </div>

            <!--! Update PROfile FORM-->
            <div id="update-profile-page"
            class="w-[85 md:w-[70vw] hidden bg-white scale-[0.70] p-12 fixed top-[50%] left-[-25%] translate-y-[-50%] translate-x-[50%] rounded-lg">
            <div class="flex flex-row items-center justify-between mb-4">
                <h1 class="text-black text-base md:text-2xl font-bold mx-4 md:mx-12">Update profile
                </h1>
                <button onclick="hideUpdateProfile()"
                    class=" text-gray-500 hover:text-gray-400 text-sm md:text-xl p-sm mx-4 md:mx-12 flex flex-row items-center justify-center gap-2">
                    Go back <svg width="7" height="10" xmlns="http://www.w3.org/2000/svg">
                        <path d="M1 1l4 4-4 4" stroke="#7C5DFA" stroke-width="2" fill="none" fill-rule="evenodd" />
                    </svg> </button>
            </div>
            <hr class="my-3 mr-8 h-[.2px]">

            <form method="POST" name="updateProfileForm"
                class=" gap-4 flex flex-col pt-4 md:px-12 h-[50%]">


                <div class="flex flex-col my-2">
                    <!-- Name -->
                    <div class="flex flex-col col-span-1 mr-8" id="name">
                        <label class=" label-red my-1 text-gray-500 font-semibold required" for="up_name">Name</label>
                        <input
                            class="border-[.2px] border-gray-300 py-1 md:py-2 px-4 rounded focus:outline-purple-400"
                            type="text" name="up_name" >
                        <span class="error text-red-500 text-[12px] ml-2 mt-1"></span>
                    </div>
                    <!-- Father Name -->
                    <div class="flex flex-col col-span-1 mr-8" id="father_name">
                        <label class=" label-red my-1 text-gray-500 font-semibold required" for="up_fatherName">Father
                            name</label>
                        <input
                            class="border-[.2px] border-gray-300 py-1 md:py-2 px-4 rounded focus:outline-purple-400"
                            type="text" name="up_fatherName" >
                        <span class="error text-red-500 text-[12px] ml-2 mt-1"></span>
                    </div>

                    <!-- Contact -->
                    <div class="flex flex-col col-span-1 mr-8" id="up_contact">
                        <label class="label-red my-1 text-gray-500 font-semibold required"
                            for="contact">Contact</label>
                        <input
                            class="border-[.2px] border-gray-300 py-1 md:py-2 px-4 rounded focus:outline-purple-400"
                            type="number" name="up_contact" >
                        <span class="error text-red-500 text-[12px] ml-2 mt-1"></span>
                    </div>

                    <!-- CNIC -->
                    <div class="flex flex-col col-span-1 mr-8" id="cnic">
                        <label class=" label-red my-1 text-gray-500 font-semibold required" for="up_cnic">CNIC</label>
                        <input
                            class="border-[.2px] border-gray-300 py-1 md:py-2 px-4 rounded focus:outline-purple-400"
                            type="number" name="up_cnic" >
                        <span class="error text-red-500 text-[12px] ml-2 mt-1"></span>
                    </div>
                </div>

                <!-- BUTTON -->
                <input onclick="hideUpdateProfile()"
                    class="rounded-lg cursor-pointer bg-purple-700 hover:opacity-[0.8] text-white text-xl px-20 py-2 md:py-3"
                    type="submit" value="Save changes">
            </form>
        </div>

            <!-- OVERLAY -->
            <div onclick="hideAddProfile();hideUpdateProfile() " id="overlay"
                class="bg-gray-800 bg-opacity-40 w-screen h-screen fixed inset-0 hidden">
            </div>
    </main>


    <script src="./javascripts/profile.js"></script>
    <!-- <script src="./javascripts/data.js"></script> -->
    <!-- <script src="./javascripts/generator.js"></script> -->
    <script src="https://cdn.tailwindcss.com"></script>
</body>

</html>